@model LazyAccount.Models.BillModel
@{
    ViewBag.Title = "懶人記帳";
    Layout = "~/Views/Shared/Site.cshtml";
}
<style type="text/css">
    table td 
    {
        text-align:center;
    }
</style>
<h2>首頁</h2>

<div style="display:inline-block">
    @Html.ActionLink("新增帳目", "Add")
    <table width="300px">
        <thead>
            <tr>
                <th colspan="3">日期: @Model.BillDate</th>
            </tr>
            <tr>
                <th>No</th>
                <th>項目</th>
                <th>金額</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.BillDetailList.Count; i++)
            { 
                <tr>
                    <th>@(i+1)</th>
                    <td>@Model.BillDetailList[i].ItemName (@Model.BillDetailList[i].ItemBudget)</td>
                    <td>@Model.BillDetailList[i].BillMoney</td>
                </tr>
            }
        </tbody>
    </table>
</div>